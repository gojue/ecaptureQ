{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "eCaptureQ",
  "version": "0.1.0",
  "identifier": "com.gojue.ecaptureq",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1422",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "eCaptureQ",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "nsis", "msi", "app", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "publisher": "gojue",
    "copyright": "Copyright © 2025 gojue",
    "homepage": "https://github.com/gojue/ecaptureQ",
    "category": "DeveloperTool",
    "shortDescription": "A cross-platform desktop application for eCapture, the powerful eBPF-based SSL/TLS traffic capture tool.",
    "longDescription": "eCaptureQ - 为强大的基于eBPF技术的SSL/TLS流量捕获工具eCapture打造的跨平台桌面应用程序。基于Tauri构建，在Linux和Android系统上提供直观的图形界面来捕获和分析加密网络流量，无需CA证书。"
  }
}